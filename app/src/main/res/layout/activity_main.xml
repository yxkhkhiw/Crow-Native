<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textAverage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif"
        android:text="@string/average"
        android:textColor="@color/text"
        android:textSize="34sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.39" />

    <Button
        android:id="@+id/onOffBtn"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_marginBottom="336dp"
        android:backgroundTint="@color/primary_color"
        android:fontFamily="sans-serif-medium"
        android:text="@string/set_alarm"
        android:textColor="@color/text"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/textAverage"
        app:layout_constraintStart_toStartOf="@+id/textAverage"
        app:layout_constraintTop_toBottomOf="@+id/textAverage" />

    <Button
        android:id="@+id/testBtn"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:backgroundTint="@color/primary_color"
        android:text="@string/test_alarm"
        android:textColor="@color/text"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/onOffBtn"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/onOffBtn"
        app:layout_constraintTop_toBottomOf="@+id/onOffBtn" />

</androidx.constraintlayout.widget.ConstraintLayout>